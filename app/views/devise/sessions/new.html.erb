<div class="login-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Log in</h2>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="panel-body">
              <div class="field">
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input-lg" %>
              </div>

              <div class="field">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "input-lg" %>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
              <div class="actions">
                <%= f.submit "Log in", class: "btn-lg btn-info btn-block" %>
              </div>
            <div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
